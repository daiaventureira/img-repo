<h1 class="title">Edit password</h1>
<%= form_with model: Current.user, url: edit_password_path do |form| %>
    <% if form.object.errors.any? %>
        <div class="notification is-danger">
            <% form.object.errors.full_messages.each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>
    <% end %>

    <div class="field">
        <div class="control has-icons-left">
            <%= form.password_field :password, class:"input", placeholder:"password"%>
        </div>
    </div>
    <div class="field">
        <div class="control has-icons-left">
            <%= form.password_field :password_confirmation, class:"input",  placeholder:"password"%>
        </div>
    </div>
    <div class="control">
        <%= form.submit "Update Password", class:"button is-primary"%>
    </div>
<% end %>

