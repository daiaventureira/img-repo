<h1 class="title">Reset your password: </h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form|%>
         <%= render "shared/form_errors", form: form %>

     <div class="field">
        <div class="control has-icons-left">
            <%= form.password_field :password, class:"input", placeholder:"password"%>
        </div>
    </div>
    <div class="field">
        <div class="control has-icons-left">
            <%= form.password_field :password_confirmation, class:"input",  placeholder:"password"%>
        </div>
    </div>
    <div class="control">
        <%= form.submit "Reset Password", class:"button is-primary"%>
    </div>
<% end %>
