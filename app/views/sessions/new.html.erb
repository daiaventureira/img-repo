<h1 class="title">Sign In</h1>

    <%= form_with url: sign_in_path do |form| %>
        <div class="field">
            <div class="control has-icons-left">
                <%= form.text_field :email, class:"input", placeholder: "example@email"%>
            </div>
        </div>
        <div class="field">
            <div class="control has-icons-left">
                <%= form.password_field :password, class:"input", placeholder:"password"%>
                <%= link_to "Forgot your password?", password_reset_path, class:"button is-primary"%>
            </div>
        </div>
        <div class="control">
            <%= form.submit "Sign In", class:"button is-primary"%>
        </div>
    <% end %>
