<div class="sign">
    <h1 class="title">Sign Up</h1>
    <%= form_with model: @user, url: sign_up_path do |form| %>
        <%= render "shared/form_errors", form: form %>
        <div class="field">
            <div class="control has-icons-left">
                <%= form.text_field :email, class:"input", placeholder: "example@email"%>
            </div>
        </div>
        <div class="field">
            <div class="control has-icons-left">
                <%= form.password_field :password, class:"input", placeholder:"password"%>
            </div>
        </div>
        <div class="field">
            <div class="control has-icons-left">
                <%= form.password_field :password_confirmation, class:"input",  placeholder:"password"%>
            </div>
        </div>
        <div class="control">
            <%= form.submit "Enter", class:"button is-primary"%>
        </div>
    <% end %>
    </div>

